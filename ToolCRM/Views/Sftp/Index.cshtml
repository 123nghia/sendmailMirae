@{
    ViewData["Title"] = "SFTP Browser";
}

<div class="row mb-4">
    <div class="col">
        <h3><i class="fas fa-server me-2"></i>SFTP Browser</h3>
        <p class="text-muted">Duyệt và tải xuống files từ SFTP Server</p>
    </div>
    <div class="col-auto">
        <a href="/" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại Dashboard
        </a>
    </div>
</div>

<!-- Connection Status -->
@{
    var connectionStatus = ViewBag.ConnectionStatus as dynamic;
    var isConnected = connectionStatus?.IsConnected ?? false;
}

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card @(isConnected ? "bg-success" : "bg-danger") text-white">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="fas @(isConnected ? "fa-check-circle" : "fa-times-circle") me-2"></i>
                    Trạng thái kết nối SFTP
                </h6>
                @if (isConnected)
                {
                    <p class="card-text mb-1"><strong>Trạng thái:</strong> ✅ Đã kết nối</p>
                    <p class="card-text mb-1"><strong>Host:</strong> @ViewBag.SftpHost</p>
                    <p class="card-text mb-1"><strong>Port:</strong> @ViewBag.SftpPort</p>
                    <p class="card-text mb-0"><strong>User:</strong> @ViewBag.Username</p>
                }
                else
                {
                    <p class="card-text mb-1"><strong>Trạng thái:</strong> ❌ Không thể kết nối</p>
                    <p class="card-text mb-1"><strong>Host:</strong> @ViewBag.SftpHost</p>
                    <p class="card-text mb-1"><strong>Port:</strong> @ViewBag.SftpPort</p>
                    <p class="card-text mb-0"><strong>User:</strong> @ViewBag.Username</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        @if (isConnected)
        {
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-title"><i class="fas fa-folder me-2"></i>Thư mục hiện tại</h6>
                    <p class="card-text mb-0"><code>@ViewBag.CurrentPath</code></p>
                </div>
            </div>
        }
        else
        {
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6 class="card-title"><i class="fas fa-exclamation-triangle me-2"></i>Không thể truy cập</h6>
                    <p class="card-text mb-0">Vui lòng kiểm tra cấu hình SFTP trong appsettings.json</p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Error Message -->
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-triangle me-3 fa-2x"></i>
            <div class="flex-grow-1">
                <h5 class="alert-heading mb-2">❌ Không thể kết nối SFTP Server!</h5>
                <div class="error-details">
                    @Html.Raw(ViewBag.ErrorMessage.Replace("\n", "<br>"))
                </div>
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Navigation Breadcrumb -->
<div class="row mb-3">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Sftp", new { path = "/" })">
                        <i class="fas fa-home"></i> Root
                    </a>
                </li>
                @if (ViewBag.CurrentPath != null && ViewBag.CurrentPath != "/")
                {
                    var pathParts = ViewBag.CurrentPath.ToString().Split('/', StringSplitOptions.RemoveEmptyEntries);
                    var currentPath = "";
                    foreach (var part in pathParts)
                    {
                        currentPath += "/" + part;
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index", "Sftp", new { path = currentPath })">@part</a>
                        </li>
                    }
                }
            </ol>
        </nav>
    </div>
</div>

<!-- Files and Folders List -->
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>Files & Folders
                    @if (ViewBag.DirectoryModel != null)
                    {
                        var totalItems = ((ViewBag.DirectoryModel as dynamic)?.Directories?.Count ?? 0) + ((ViewBag.DirectoryModel as dynamic)?.Files?.Count ?? 0);
                        <span class="badge bg-light text-dark ms-2">@totalItems items</span>
                    }
                </h5>
            </div>
            <div class="card-body p-0">
                @if (ViewBag.DirectoryModel != null)
                {
                    var directoryModel = ViewBag.DirectoryModel as dynamic;
                    var hasItems = (directoryModel?.Directories?.Count > 0) || (directoryModel?.Files?.Count > 0);
                    
                    @if (hasItems)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="fas fa-file me-1"></i>Tên</th>
                                        <th><i class="fas fa-tag me-1"></i>Loại</th>
                                        <th><i class="fas fa-weight me-1"></i>Kích thước</th>
                                        <th><i class="fas fa-clock me-1"></i>Thời gian sửa đổi</th>
                                        <th><i class="fas fa-cogs me-1"></i>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @* Hiển thị thư mục trước *@
                                    @if (directoryModel?.Directories != null)
                                    {
                                        @foreach (dynamic dir in directoryModel.Directories)
                                        {
                                            <tr>
                                                <td>
                                                    <i class="fas fa-folder text-warning me-2"></i>
                                                    <strong>@dir.Name</strong>
                                                </td>
                                                <td>
                                                    <span class="badge bg-warning text-dark">Folder</span>
                                                </td>
                                                <td>
                                                    <span class="text-muted">-</span>
                                                </td>
                                                <td>@dir.LastModified.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>
                                                    <a href="@Url.Action("Index", "Sftp", new { path = dir.FullPath })" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-folder-open me-1"></i>Mở
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    
                                    @* Hiển thị files sau *@
                                    @if (directoryModel?.Files != null)
                                    {
                                        @foreach (dynamic file in directoryModel.Files)
                                        {
                                            <tr>
                                                <td>
                                                    <i class="fas fa-file text-primary me-2"></i>
                                                    @file.Name
                                                </td>
                                                <td>
                                                    <span class="badge bg-primary">File</span>
                                                </td>
                                                <td>
                                                    @file.SizeFormatted
                                                </td>
                                                <td>@file.LastModified.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>
                                                    <a href="@Url.Action("Download", "Sftp", new { filePath = file.FullPath, fileName = file.Name })" 
                                                       class="btn btn-sm btn-success" 
                                                       onclick="showDownloadLoading('@file.Name')">
                                                        <i class="fas fa-download me-1"></i>Tải xuống
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Thư mục trống</h5>
                        <p class="text-muted">Không có file hoặc thư mục nào trong thư mục này</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Navigation -->
<div class="row mt-4">
    <div class="col">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h6 class="mb-0"><i class="fas fa-bolt me-2"></i>Điều hướng nhanh</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", "Sftp", new { path = "/uploads/PAYMENT" })" class="btn btn-outline-success w-100 mb-2">
                            <i class="fas fa-credit-card me-2"></i>Payment Files
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", "Sftp", new { path = "/uploads/WORKINGTIME" })" class="btn btn-outline-info w-100 mb-2">
                            <i class="fas fa-clock me-2"></i>Working Time
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", "Sftp", new { path = "/uploads/CAllREPORT" })" class="btn btn-outline-warning w-100 mb-2">
                            <i class="fas fa-phone me-2"></i>Call Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function showDownloadLoading(fileName) {
    // Tạo loading overlay
    const overlay = document.createElement('div');
    overlay.style.cssText = `
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.8);
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
    `;
    
    overlay.innerHTML = `
        <div class="text-center text-white">
            <div class="spinner-border text-light mb-3" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <h4>Đang tải xuống...</h4>
            <p>${fileName}</p>
        </div>
    `;
    
    document.body.appendChild(overlay);
    
    // Tự động ẩn sau 3 giây
    setTimeout(() => {
        if (document.body.contains(overlay)) {
            document.body.removeChild(overlay);
        }
    }, 3000);
}

@functions {
    string FormatFileSize(long bytes)
    {
        if (bytes == 0) return "0 B";

        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        int order = 0;
        double size = bytes;

        while (size >= 1024 && order < sizes.Length - 1)
        {
            order++;
            size = size / 1024;
        }

        return $"{size:0.##} {sizes[order]}";
    }
}
</script>
