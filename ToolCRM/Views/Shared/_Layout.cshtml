<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToolCRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ToolCRM.styles.css" asp-append-version="true" />
    <style>
        body {
            font-size: 0.875rem;
        }
        .sidebar {
            position: fixed;
            top: 48px;
            bottom: 0;
            left: 0;
            width: 240px;
            z-index: 100;
            padding: 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
            background-color: #2c3e50;
        }
        .sidebar-sticky {
            position: -webkit-sticky;
            position: sticky;
            top: 0;
            height: calc(100vh - 48px);
            padding-top: .5rem;
            overflow-x: hidden;
            overflow-y: auto;
        }
        .sidebar .nav-link {
            font-weight: 500;
            color: #ffffff;
            padding: 0.75rem 1.5rem;
            transition: all 0.3s;
            border-left: 3px solid transparent;
        }
        .sidebar .nav-link:hover {
            color: #4CAF50;
            background-color: rgba(255, 255, 255, 0.1);
            border-left-color: #4CAF50;
        }
        .sidebar .nav-link.active {
            color: #4CAF50;
            background-color: rgba(255, 255, 255, 0.1);
            border-left-color: #4CAF50;
        }
        .sidebar .nav-link i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }
        .sidebar-heading {
            font-size: .75rem;
            text-transform: uppercase;
            color: #95a5a6;
            padding: 1rem 1.5rem;
            font-weight: 600;
        }
        .main-content {
            margin-left: 240px;
            padding: 20px;
            min-height: calc(100vh - 48px);
            margin-top: 0;
        }
        .navbar-brand {
            padding: 0.75rem 1.5rem;
            font-size: 1.25rem;
            font-weight: 600;
            color: #ffffff !important;
            background-color: #1a252f;
        }
        .topbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 48px;
            background-color: #34495e;
            border-bottom: 1px solid #2c3e50;
            z-index: 101;
            width: 100%;
        }
        .navbar-brand {
            width: 240px;
        }
        @@media (max-width: 767.98px) {
            .sidebar {
                top: 48px;
            }
            .main-content {
                margin-left: 0;
            }
            .navbar-brand {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="topbar">
        <nav class="navbar navbar-dark bg-transparent">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-chart-line"></i> ToolCRM
                </a>
            </div>
        </nav>
    </div>

    <nav class="col-md-3 col-lg-2 d-md-block sidebar">
        <div class="sidebar-sticky pt-3">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" 
                       asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Sftp" ? "active" : "")" 
                       asp-controller="Sftp" asp-action="Index">
                        <i class="fas fa-server"></i> SFTP Manager
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Log" ? "active" : "")" 
                       asp-controller="Log" asp-action="Index">
                        <i class="fas fa-history"></i> Log History
                    </a>
                </li>
            </ul>

            <hr class="my-3" style="border-color: #34495e;" />

            <h6 class="sidebar-heading">System</h6>
            <ul class="nav flex-column mb-2">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-cog"></i> Settings
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <main role="main" class="main-content">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
